<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_gradient">

    <LinearLayout
        android:id="@+id/layoutLanding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_glass_nav"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:letterSpacing="-0.02"
                    android:text="@string/app_name"
                    android:textColor="@color/primary_blue"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnLandingLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_btn_outline"
                    android:minHeight="0dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="@string/action_sign_in"
                    android:textAllCaps="false"
                    android:textColor="@color/text_main"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnLandingRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_btn_primary"
                    android:minHeight="0dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="@string/action_register"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/etLandingSearch"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_search_pill"
                android:hint="@string/hint_search_items"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/text_main"
                android:textColorHint="@color/text_sub"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_glass_panel"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/landing_banner_title"
                android:textColor="@color/text_main"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/landing_subtitle"
                android:textColor="@color/text_sub"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/featured_listings"
                android:textColor="@color/text_main"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLandingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_sub"
                android:textSize="12sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressLanding"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLandingItems"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_glass_panel"
                android:orientation="vertical"
                android:padding="22dp">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/logo_tradeoff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/login_title"
                    android:textColor="@color/text_main"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/login_subtitle"
                    android:textColor="@color/text_sub"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etLoginEmail"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/bg_input_pill"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/text_main"
                    android:textColorHint="@color/text_sub"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etLoginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_input_pill"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/text_main"
                    android:textColorHint="@color/text_sub"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnLoginSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_btn_primary"
                    android:minHeight="0dp"
                    android:text="@string/action_sign_in"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnLoginGoRegister"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_btn_outline"
                    android:minHeight="0dp"
                    android:text="@string/action_create_account"
                    android:textAllCaps="false"
                    android:textColor="@color/text_main"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnLoginBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:background="@android:color/transparent"
                    android:minHeight="0dp"
                    android:text="@string/action_back_to_marketplace"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_blue"
                    android:textSize="14sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_auth_illustration_panel"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/illustration_desc"
                    android:scaleType="fitCenter"
                    android:src="@drawable/illustration_marketplace" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/layoutRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_glass_panel"
                android:orientation="vertical"
                android:padding="22dp">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/logo_tradeoff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/register_title"
                    android:textColor="@color/text_main"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etRegisterFullName"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/bg_input_pill"
                    android:hint="@string/hint_full_name"
                    android:inputType="textPersonName"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/text_main"
                    android:textColorHint="@color/text_sub"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etRegisterDisplayName"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_input_pill"
                    android:hint="@string/hint_display_name"
                    android:inputType="textPersonName"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/text_main"
                    android:textColorHint="@color/text_sub"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etRegisterEmail"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_input_pill"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/text_main"
                    android:textColorHint="@color/text_sub"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etRegisterPassword"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_input_pill"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:textColor="@color/text_main"
                    android:textColorHint="@color/text_sub"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnRegisterSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/bg_btn_primary"
                    android:minHeight="0dp"
                    android:text="@string/action_register"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnRegisterBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:background="@android:color/transparent"
                    android:minHeight="0dp"
                    android:text="@string/action_back_to_marketplace"
                    android:textAllCaps="false"
                    android:textColor="@color/primary_blue"
                    android:textSize="14sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_auth_illustration_panel"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/illustration_desc"
                    android:scaleType="fitCenter"
                    android:src="@drawable/illustration_marketplace" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutDashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_glass_nav"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_action_circle"
                android:gravity="center"
                android:text="@string/menu_icon"
                android:textColor="@color/primary_blue_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:letterSpacing="-0.02"
                android:text="@string/app_name"
                android:textColor="@color/primary_blue"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDashboardLogout"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@drawable/bg_btn_dark"
                android:minHeight="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/action_logout"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_hero_banner"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvDashboardWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="@string/dashboard_subtitle"
                android:textColor="#F2FFFFFF"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/etDashboardSearch"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_search_pill"
                android:hint="@string/hint_search_items"
                android:inputType="text"
                android:maxLines="1"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#E6FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnTabMarketplace"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:background="@drawable/bg_btn_primary"
                    android:minHeight="0dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="@string/tab_marketplace"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnTabMyListings"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_btn_outline"
                    android:minHeight="0dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="@string/tab_my_listings"
                    android:textAllCaps="false"
                    android:textColor="@color/text_main"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnTabProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_btn_outline"
                    android:minHeight="0dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="@string/tab_profile"
                    android:textAllCaps="false"
                    android:textColor="@color/text_main"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnTabSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_btn_outline"
                    android:minHeight="0dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="@string/tab_settings"
                    android:textAllCaps="false"
                    android:textColor="@color/text_main"
                    android:textSize="12sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/layoutDashboardFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spDashboardCategory"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_pill"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />

                <Spinner
                    android:id="@+id/spDashboardSort"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_pill"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDashboardSell"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_primary"
                    android:minHeight="0dp"
                    android:text="@string/action_sell"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnDashboardRefresh"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_outline"
                    android:minHeight="0dp"
                    android:text="@string/action_refresh"
                    android:textAllCaps="false"
                    android:textColor="@color/text_main"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btnDashboardChat"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_outline"
                    android:minHeight="0dp"
                    android:text="@string/action_chat"
                    android:textAllCaps="false"
                    android:textColor="@color/text_main"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDashboardListHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/recent_listings"
                android:textColor="@color/text_main"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDashboardStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_sub"
                android:textSize="12sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressDashboard"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDashboardItems"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/layoutDashboardProfile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_glass_panel"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvProfileDisplayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_main"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProfileFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_sub"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_sub"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvProfileListingCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_main"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDashboardSettings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_glass_panel"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings_title"
                android:textColor="@color/text_main"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/settings_account"
                android:textColor="@color/text_main"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/settings_account_desc"
                android:textColor="@color/text_sub"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/settings_notifications"
                android:textColor="@color/text_main"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
